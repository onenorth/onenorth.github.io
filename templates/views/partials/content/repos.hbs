{{#if repos}}
<section class="section section--repos">
  <div class="grid-container">
    <div class="grid-100">
      <header class="section-header">
        <h2>GitHub Projects</h2>
      </header>
    </div>
    {{#each repo}}
    <div class="grid-33 tablet-grid-50 mobile-grid-100">
      <div class="repo">
        <h3 class="repo__name">
          <a href="{{html_url}}" alt="{{name}}">{{name}}</a>
        </h3>
        {{#if description}}
        <p class="repo__description">{{description}}</p>
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</section>
{{/if}}
